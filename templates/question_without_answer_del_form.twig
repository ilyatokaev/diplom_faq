<html>

    <head>
        <link rel="stylesheet" href="css/bootstrap.min.css">
        <link rel="stylesheet" href="css/style.css">
        <script src="js/jquery-3.2.1.min.js"></script>
        <script src="js/bootstrap.min.js"></script>
        <meta charset="UTF-8">
        <title></title>
    </head>
    <body>
        
        <div class="container">
            <div class="row" id="header">
                <div class="col-md-12"><h4>Удаление вопроса</h4></div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <form class="form-horizontal loginForm" action="router.php" method="post">

                        <input type="hidden" name="signal" value="question_without_answer_del_action">
                        <input type="hidden" name="id_q" value="{{id_q}}">

                        <div class="form-group">
                          <label for="category" class="col-sm-5 control-label">Тема</label>
                          <div class="col-sm-7">
                              <input disabled type="text" class="form-control" id="q_text" name="category" value="{{category}}" placeholder="Автор">
                          </div>
                        </div>

                        <div class="form-group">
                          <label for="author" class="col-sm-5 control-label">Автор</label>
                          <div class="col-sm-7">
                            <input disabled type="text" class="form-control" id="q_text" name="author" value="{{author}}" placeholder="Автор">
                          </div>
                        </div>

                        <div class="form-group">
                          <label for="email" class="col-sm-5 control-label">Адрес элетронной почты</label>
                          <div class="col-sm-7">
                              <input disabled type="email" class="form-control" id="q_text" name="email" value="{{email}}" placeholder="Адрес элетронной почты">
                          </div>
                        </div>
                                
                        <div class="form-group">
                          <label for="q_text" class="col-sm-5 control-label">Текст вопроса</label>
                          <div class="col-sm-7">
                            <input disabled type="text" class="form-control" id="q_text" name="q_text" value="{{q_text}}" placeholder="Текст">
                          </div>
                        </div>

                        <div class="form-group">
                          <div class="col-sm-offset-5 col-sm-7">
                            <button type="submit" class="btn btn-default">Удалить</button>
                          </div>
                        </div>
                          
                    </form>
                </div>
            </div>
        
        </div>
        

    </body>
</html>
