<html>

    <head>
        <link rel="stylesheet" href="css/bootstrap.min.css">
        <link rel="stylesheet" href="css/style.css">
        <script src="js/jquery-3.2.1.min.js"></script>
        <script src="js/bootstrap.min.js"></script>
        <meta charset="UTF-8">
        <title></title>
    </head>
    <body>
        
        <div class="container">
            <div class="row" id="header">
                <div class="col-md-12"><h4>Создание нового вопроса</h4></div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <form class="form-horizontal loginForm" action="router.php" method="post">

                        <input type="hidden" name="signal" value="question_create_action">
                        <input type="hidden" name="id_category" value="question_create_action">

                        
                        <div class="form-group">
                            <label class="control-label col-sm-5" for="select01">Тема</label>
                            <div class="controls col-sm-7">
                                <select id="select01" name="id_category">
                                    {%for category in categories%}
                                        <option value="{{category.id}}">{{category.code}}</option>
                                    {%endfor%}
                                </select>
                            </div>
                        </div>


                        <div class="form-group">
                          <label for="author" class="col-sm-5 control-label">Автор</label>
                          <div class="col-sm-7">
                            <input type="text" class="form-control" id="q_text" name="author" placeholder="Автор">
                          </div>
                        </div>

                        <div class="form-group">
                          <label for="email" class="col-sm-5 control-label">Адрес элетронной почты</label>
                          <div class="col-sm-7">
                              <input type="email" class="form-control" id="q_text" name="email" placeholder="Адрес элетронной почты">
                          </div>
                        </div>
                                
                        <div class="form-group">
                          <label for="q_text" class="col-sm-5 control-label">Текст вопроса</label>
                          <div class="col-sm-7">
                            <input type="text" class="form-control" id="q_text" name="q_text" placeholder="Текст">
                          </div>
                        </div>

        
                            
                        <div class="form-group">
                          <div class="col-sm-offset-5 col-sm-7">
                            <button type="submit" class="btn btn-default">Создать</button>
                          </div>
                        </div>
                    </form>
                </div>
            </div>
        
        </div>
        

    </body>
</html>
